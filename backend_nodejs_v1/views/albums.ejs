<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <title>Albums</title>
    </head>
    <body>
        <%- include("navbar", { user }) %>
        <div class="container">
            <h1 class="text-center">Albums</h1>
            <div class="card p-5">
                <div class="text-center">
                    <div class="d-flex col-5 justify-content-around">
                        <p>display <%= results.limit %> results per page</p>
                        <p>|</p>
                        <p>results <%= results.count %> of <%= results.total %></p>
                        <p>|</p>
                        <% if (results.pagination.prev) { %>
                            <p><a href="/api/v1/albums?page=<%= results.pagination.prev.page %>">prev</a></p>
                            <p>|</p>
                        <% } %>
                        <p>page <%= results.pagination.curr.page %> of <%= results.total %></p>
                        <% if (results.pagination.next) { %>
                            <p>|</p>
                            <p><a href="/api/v1/albums?page=<%= results.pagination.next.page %>">next</a></p>
                        <% } %>
                    </div>
                </div>
        
                <% results.data.map(album => { %>
                    <img src="/uploads/albums/<%= album.artist_slug %>-<%= album.album_slug %>/<%= album.cover_photo %>"/>
                    <a href="/api/v1/albums/<%= album.id %>"><%= album.album_name %></a>
                    <p><%= album.artist %></p>
                    <p><%= album.genre %></p>
                    <p><%= album.year %></p>
                    <p><%= album.producer %></p>
                    <p><%= album.description %></p>
                    <a href="<%= album.album_url %>"></a>
                    <p><%= album.createdAt %></p>
                    <% album.tracks.map(track => { %>
                        <p><%= track.track_name %></p>
                        <p><%= track.featuring %></p>
                        <p><%= track.duration %></p>
                        <p><%= track.file_size %></p>
                    <% }) %>
                <% }) %>
            </div>
        </div>
    </body>
</html>
